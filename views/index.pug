doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, shrink-to-fit=no, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    title BINK.js #{version}
    // jQuery
    script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
    // Bootstrap.css from CDN
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
    // Open Iconic CDN for Icons/Sprites
    link(href='https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css', rel='stylesheet')
    // Timeline Chart Libraries
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vis/4.7.0/vis.min.js')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/vis/4.7.0/vis.min.css', rel='stylesheet')
    // jPlayer from CDN
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jplayer/2.9.2/jplayer/jquery.jplayer.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jplayer/2.9.2/add-on/jplayer.playlist.js')
    link(href='css/jplayer.blue.monday.css', rel='stylesheet')
    // Custom CSS that BINK uses
    link(href='css/bink.css', rel='stylesheet')
    // The BINK Client-side JavaScript Application
    script(src='js/bink.js')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-expand-sm.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='#') BINK.js #{version}
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a#recentButton.active.nav-link.linkish(href='#recent') Recent
          li.nav-item
            a#browseButton.nav-link.linkish(href='#browse') Browse
          li.nav-item
            a#historyButton.nav-link.linkish(href='#history') History
          li.nav-item
            a#playlistButton.nav-link.linkish(href='#playlist') Playlist
          li.nav-item
            a#timelineButton.nav-link.linkish(href='#timeline') Timeline
          li.nav-item
            a#mapButton.nav-link.linkish(href='#map') Map
          li.nav-item
            a#twitterButton.nav-link.linkish(href='#tweets') Tweets
          form.form-inline.my-2.my-lg-0
            input#search.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          li.nav-item
            a#adminButton.nav-link.linkish Admin
          a#adminMenu.nav-link.dropdown-toggle.linkish.invisible(data-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false') Admin
            .dropdown-menu
            a.dropdown-item.linkish(href='#new') New
            .dropdown-divider
            a#logoutButton.dropdown-item.linkish(href='#') Logout
    #jquery_jplayer_1
    #jp_container_1.jp-audio(role='application', aria-label='media player')
      .jp-type-single
        .jp-gui.jp-interface
          .jp-controls-holder
            .jp-volume-controls
              button.jp-mute(role='button', tabindex='0') mute
              button.jp-volume-max(role='button', tabindex='0')
                | max
                | volume
              .jp-volume-bar
                .jp-volume-bar-value
            .jp-controls
              button.jp-play(role='button', tabindex='0') play
              button.jp-stop(role='button', tabindex='0') stop
            .jp-other
              .jp-current-time(role='timer', aria-label='time')  
              .jp-duration(role='timer', aria-label='duration')  
              .jp-toggles
                button.jp-repeat(role='button', tabindex='0') repeat
            .jp-progress
              .jp-seek-bar
                .jp-play-bar
        .jp-details
          .jp-title(aria-label='title')  
        .jp-no-solution
          span Update Required
          |  To play the media you will need to
          | 				either update your browser to a recent version or update your
          a(href='http://get.adobe.com/flashplayer/', target='_blank')
            | Flash
            | plugin
          | .
    #sidebar-wrapper.collapse
      ul#the-playlist.sidebar-nav
        li.sidebar-brand
          a  Playlist
    // Modal for Admin Login
    #adminModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#adminLoginTitle.modal-title Admin Login
          form
            .modal-body
              .form-group
                label(for='adminPassword') Password
                input#adminPassword.form-control(type='password', placeholder='')
              #invalidPassword.alert.alert-warning.invisible(role='alert') Invalid password! Please try again.
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button#loginButton.btn.btn-primary(type='submit') Login
    #alertModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#thisAlertTitle.modal-title Alert
          #thisAlert.modal-body ...
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
    #main.main
