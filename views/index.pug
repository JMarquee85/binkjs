    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') BINK.js
        #navbar.navbar-collapse.collapse
          form.navbar-form.navbar-right
            input#search.form-control(type='text', placeholder='Search...')
          ul.nav.navbar-nav.navbar-right
            li
              a#recentButton.navbarlink(href='#recent') Recent
            li
              a#browseButton.navbarlink(href='#browse') Browse
            li
              a#historyButton.navbarlink(href='#history') History
            li
              a#playlistButton.navbarlink(href='#playlist') Playlist
            li
              a#timelineButton.navbarlink Timeline
            li
              a#mapButton.navbarlink(href='#map') Map
            li
              a#twitterButton.navbarlink(href='#tweets') Tweets
            li
              a#adminButton.navbarlink Admin
            li
              a#adminMenu.navbarlink.dropdown-toggle.hidden(data-toggle='dropdown')
                | Admin
                span.caret
              ul.dropdown-menu
                li
                  a.navbarlink(href='#new') New
                li.divider(role='separator')
                li
                  a#logoutButton.navbarlink Logout
    #jquery_jplayer_1
    #jp_container_1.jp-audio(role='application', aria-label='media player')
      .jp-type-single
        .jp-gui.jp-interface
          .jp-controls-holder
            .jp-volume-controls
              button.jp-mute(role='button', tabindex='0') mute
              button.jp-volume-max(role='button', tabindex='0')
                | max
                | volume
              .jp-volume-bar
                .jp-volume-bar-value
            .jp-controls
              button.jp-play(role='button', tabindex='0') play
              button.jp-stop(role='button', tabindex='0') stop
            .jp-other
              .jp-current-time(role='timer', aria-label='time')  
              .jp-duration(role='timer', aria-label='duration')  
              .jp-toggles
                button.jp-repeat(role='button', tabindex='0') repeat
            .jp-progress
              .jp-seek-bar
                .jp-play-bar
        .jp-details
          .jp-title(aria-label='title')  
        .jp-no-solution
          span Update Required
          |  To play the media you will need to
          | 				either update your browser to a recent version or update your
          a(href='http://get.adobe.com/flashplayer/', target='_blank')
            | Flash
            | plugin
          | .
    #sidebar-wrapper.collapse
      ul#the-playlist.sidebar-nav
        li.sidebar-brand
          a  Playlist
    // Modal for Admin Login
    #adminModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#adminLoginTitle.modal-title Admin Login
          form
            .modal-body
              .form-group
                label(for='adminPassword') Password
                input#adminPassword.form-control(type='password', placeholder='')
              #invalidPassword.alert.alert-warning.hidden(role='alert') Invalid password! Please try again.
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button#loginButton.btn.btn-primary(type='submit') Login
    #alertModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#thisAlertTitle.modal-title Alert
          #thisAlert.modal-body ...
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
    #main.main
