doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, shrink-to-fit=no, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    title BINK.js #{version}
    //jQuery
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
    //Bootstrap 4 requires Popper for Modals
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js", integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1", crossorigin="anonymous")
    //The bootstrap javascript library
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js", integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM", crossorigin="anonymous")

    //Bootstrap DARKLY Theme -- should not need further customization!
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.3.1/darkly/bootstrap.min.css", integrity="sha256-6W1mxPaAt4a6pkJVW5x5Xmq/LvxuQpR9dlzgy77SeZs=", crossorigin="anonymous")

    //Bootstrap Table CSS
    //Randomly/luckily the theme is actually better without this CSS file, so it's here if you need it but leave it commented.
    //link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.css', integrity='sha256-UP+6xezmmsC027u61a8Ks+Xnp+TftBfw4PcrNyPXC40=', crossorigin='anonymous')
    //FontAwesome Icons/Sprites usable with Bootstrap
    script(defer='', src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
    //Howler.js import
    script(src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.2/howler.min.js", integrity="sha256-El7dyxdVp1e1v0xgjrrpzr5+BO29pwP0Qfl40VDffiI=", crossorigin="anonymous")
    // Custom CSS that BINK uses
    link(href='css/bink.css', rel='stylesheet')
    // The BINK Client-side JavaScript Application
    script(src='js/bink.js')
    // Moment.js -- used for handling the dates in date selection in the Admin UI
    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js")
    // Tempus Dominus -- a great little Bootstrap-oriented date selector for the admin UI
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css")
    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js")
    // Bootstrap Autocomplete -- musicians, bands, instruments, producers, locations
    script(type="text/javascript", src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.2.1/dist/latest/bootstrap-autocomplete.min.js")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-primary
      a.navbar-brand BINK v#{version}
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a#recentButton(href="javascript:").active.nav-link
              | Recent
              span.sr-only (current)
          li.nav-item
            a#browseButton(href="javascript:").nav-link
              | Browse
          li.nav-item
            a#historyButton(href="javascript:").nav-link
              | History
          li.nav-item
            a#mapButton(href="javascript:").nav-link
              | Map
          li#adminItem.nav-item.dropdown
            a#adminButton(href="javascript:").nav-link
              | Admin

    #main.main
    container-fluid.bg-primary.fixed-bottom.pt-2.pl-1
      .row
        .col-xl-7.col-lg-7.col-md-7.col-sm-7.col-7
          #playButton.btn.btn-primary(type=button)
            i.fas.fa-play
          #pauseButton.btn.btn-primary.disabled(type=button)
            i.fas.fa-pause
          #stopButton.btn.btn-primary(type=button)
            i.fas.fa-stop
          #backwardButton.btn.btn-primary(type=button)
            i.fas.fa-step-backward
          #forwardButton.btn.btn-primary(type=button)
            i.fas.fa-step-forward
        .col-xl-2.col-lg-2.col-md-2.col-sm-2.col-5
          p#currentPosition.mt-2 0:00 / 0:00
        .col-xl-3.col-lg-3.col-md-3.col-sm-3.col-12
          p#currentlyPlaying.ml-3.mt-2
            em Nothing playing...
    #alertModal.modal(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#alertTitle.modal-title ...
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
          .modal-body
            p#alertText ...
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
